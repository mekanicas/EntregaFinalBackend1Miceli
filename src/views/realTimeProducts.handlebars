<!-- Formulario para actualizar productos -->
    <div class="col">
            <div class="update mt-5">
                <div class="row">
        <h2>Modificar Producto</h2>
        <div class="formulario-update row">
            <div class="col-6">
            <input id="update-id" type="text" class="form-control mb-2" placeholder="ID Producto a Modificar"> 
            <input id="update-title" type="text" class="form-control mb-2" placeholder="Titulo"> 
            <input id="update-description" type="text" class="form-control mb-2" placeholder="Descripcion"> 
            <input id="update-price" type="number" class="form-control mb-2" placeholder="Precio"> 
            </div>
            <div class="col-6">
            <input id="update-code" type="text" class="form-control mb-2" placeholder="Codigo"> 
            <input id="update-stock" type="number" class="form-control mb-2" placeholder="Stock"> 
            <input id="update-category" type="text" class="form-control mb-2" placeholder="Categoria"> 
            </div>
            <button id="button-update" onclick="updateProduct()" class="btn btn-dark">Modificar Producto</button>
            </div>
        </div>
        </div>
    </div>

        <div class="col mt-5 mb-5">
        <h2>Eliminar producto</h2>
        <form id="delete-form">
    <input type="number" id="productIdToDelete" placeholder="ID del producto" class="form-control mb-2" required>
    <button type="submit" class="btn btn-dark justify-content-end">Eliminar Producto</button>
</form>
    </div>


        </div>


