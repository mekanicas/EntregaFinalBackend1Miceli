
<!-- Formulario para agregar productos -->
<div class="container mt-5">
    <div class="col">
        <div class="row">    
            <h2>Agregar Producto</h2>
    <div class="col-6">
        <form id="product-form">
    <input type="text" id="productName" placeholder="Nombre del producto" class="form-control mb-2" required>
    <input type="number" id="productPrice" placeholder="Precio" class="form-control mb-2" required>
    <input type="text" id="productDescription" placeholder="Descripción" class="form-control mb-2" required>
    <input type="text" id="productTitle" placeholder="Título" class="form-control mb-2" required>
    </div>
    <div class="col-6">
    <input type="text" id="productCode" placeholder="Código" class="form-control mb-2" required>
    <input type="number" id="productStock" placeholder="Stock" class="form-control mb-2" required>
    <input type="text" id="productCategory" placeholder="Categoría" class="form-control mb-2" required>
    <input type="text" id="productThumbnail" placeholder="Thumbnail" class="form-control mb-2" required>
    </div>
    <button type="submit" class="btn btn-dark">Agregar Producto</button>
</form>
    </div>


